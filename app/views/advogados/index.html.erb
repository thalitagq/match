<p id="notice"><%= notice %></p>

<h1>Advogados</h1>

<table>
  <thead>
    <tr>
      <th>Nome</th>
      <th>Estado</th>
      <th>Qnt_Clientes</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @advogados.each do |advogado| %>
      <tr>
        <td><%= advogado.nome %></td>
        <td><%= advogado.estado %></td>
        <td><%= advogado.qnt_clientes %></td>
        <td><%= link_to 'Show', advogado %></td>
        <td><%= link_to 'Edit', edit_advogado_path(advogado) %></td>
        <td><%= link_to 'Destroy', advogado, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

